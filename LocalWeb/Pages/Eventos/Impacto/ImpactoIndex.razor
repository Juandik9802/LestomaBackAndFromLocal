@page "/Evento"


<h3>Eventos del sistema</h3>

<div class="md-3">    
    <a class="btn btn-primary" href="/Home">Regresar</a>
</div>

<GenericList MyList="TipoDispositivos">
    <Body>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Tipos Registrados</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var impacto in Impactos!)
                {
                    <tr>
                        <th>@impacto.Nombre</th>
                        <td>
                            <a href="/TipoDispositivo/edit/@impacto.IdImpacto" class="btn btn-warning btn-sm">Editar</a>
                            <a class="btn btn-info btn-sm" href="/Evento/details/@impacto.IdImpacto">Detalles</a>
                            <button @onclick=@(() => DeleteAsync(impacto)) class="btn btn-danger btn-sm">Borrar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </Body>
</GenericList>
