@page "/TipoElemento"


<h3>Tipos de elementos</h3>

<div class="md-3">
    <a class="btn btn-primary btn-sm" href="/TipoElemento/create"> Nuevo</a>
    <a class="btn btn-success btn-sm" href="/Home">Regresar</a>
</div>

<GenericList MyList="TipoDispositivos">
    <Body>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Tipos Registrados</th>
                    <th>
                        Cantidad
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tipoElemento in tipoElementos!)
                {
                    <tr>
                        <th>@tipoElemento.Nombre</th>
                        <th>@tipoElemento.ElementosNumber</th>
                        <td>
                            <a href="/TipoElemento/edit/@tipoElemento.IdTipoElemento" class="btn btn-warning btn-sm">Editar</a>
                            <a class="btn btn-info btn-sm" href="/TipoElemento/details/@tipoElemento.IdTipoElemento">Detalles</a>
                            <button @onclick=@(() => DeleteAsync(tipoElemento)) class="btn btn-danger btn-sm">Borrar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </Body>
</GenericList>